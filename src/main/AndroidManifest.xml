<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fooddelivery">

    <!-- Internet permission is needed for socket connection -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.NearbyStoresActivity"
            android:label="Nearby Stores" />

        <activity
            android:name=".activities.FilterStoresActivity"
            android:label="Filter Stores" />

        <activity
            android:name=".activities.StoreDetailsActivity"
            android:label="Store Details" />

        <activity
            android:name=".activities.PurchaseActivity"
            android:label="Purchase Products" />

        <activity
            android:name=".activities.RateStoreActivity"
            android:label="Rate Store" />

    </application>

</manifest>